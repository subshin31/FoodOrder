=form_for @customer do |form|
	.row
	
		=form.label :name, "Customer Name :",class:'col-md-3 text_label' 
		=form.text_field :name, placeholder:"Enter Customer Name ",class:'col-md-9 form_text'
	%div
		=form.label :address, "Customer Address :",class:'col-md-3 text_label'
		=form.text_area :address, placeholder:"Enter Address",rows:'5',cols:'30',class:'col-md-9 form_text'
	%div
		=form.label :contact_number, "Contact Number:",class:'col-md-3 text_label'
		=form.text_field :contact_number, placeholder:"Enter Contact Number",rows:'5',cols:'30',class:'col-md-9 form_text'
	
	%div
		=form.label :email_id, "Email ID :", class:'col-md-3 text_label'
		=form.text_field :email_id, class:'col-md-9 form_text'

	%div
		=form.submit "Save Customer Name", class:'save_button'
	%div

	